---
import Layout from '../layouts/Layout.astro';

let posts = [];
if (Astro.locals.runtime) {
  const db = Astro.locals.runtime.env.DB;
  const result = await db.prepare('SELECT * FROM posts ORDER BY created_at DESC').all();
  posts = result.results;
} else {
  console.log('Running in dev mode without local runtime');
}
---

<Layout title="我的博客 - 首页">
  <!-- 页面标题区 -->
  <section class="mb-12">
    <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl">
      欢迎来到我的博客
    </h1>
    <p class="mt-4 text-lg text-gray-500 max-w-2xl">
      记录生活、分享技术、沉淀思考
    </p>
  </section>

  <!-- 文章列表 -->
  {posts.length > 0 ? (
    <section class="space-y-8">
      {posts.map((post: any) => (
        <a href={`/posts/${post.id}`} class="block">
          <article class="group relative rounded-2xl border border-gray-100 bg-white p-6 shadow-sm transition-all duration-300 hover:border-gray-200 hover:shadow-md cursor-pointer">
            <div class="flex flex-col gap-3">
              <!-- 文章标题 -->
              <h2 class="text-xl font-semibold text-gray-900 group-hover:text-primary-600 transition-colors">
                {post.title}
              </h2>

              <!-- 文章内容预览 -->
              <p class="text-gray-600 leading-relaxed line-clamp-3">
                {post.content}
              </p>

              <!-- 元信息 -->
              <div class="flex items-center justify-between pt-2">
                <time class="text-sm text-gray-400" datetime={post.created_at}>
                  {new Date(post.created_at).toLocaleDateString('zh-CN', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </time>
                <span class="text-sm text-primary-600 opacity-0 group-hover:opacity-100 transition-opacity">
                  阅读全文 →
                </span>
              </div>
            </div>
          </article>
        </a>
      ))}
    </section>
  ) : (
    <!-- 空状态 -->
    <section class="flex flex-col items-center justify-center rounded-2xl border-2 border-dashed border-gray-200 bg-gray-50/50 px-6 py-16 text-center">
      <div class="rounded-full bg-gray-100 p-4 mb-4">
        <svg class="h-8 w-8 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
        </svg>
      </div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">暂时还没有文章</h3>
      <p class="text-gray-500 mb-6">快去发布你的第一篇文章吧！</p>
      <a href="/admin" class="inline-flex items-center gap-2 rounded-lg bg-primary-600 px-5 py-2.5 text-sm font-medium text-white shadow-sm transition-all hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2">
        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        发布文章
      </a>
    </section>
  )}
</Layout>
